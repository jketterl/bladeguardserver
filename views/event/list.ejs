<% layout('../web') -%>
<% block('title', 'Event List') -%>
<div class="panel panel-default">
    <div class="panel-heading">
        <h1 class="panel-title">Blade Nights <%= year %></h1>
    </div>

    <table class="table .table-striped .table-condensed panel-body events">
        <%
            events.forEach(function(event){
                if (event.start.getFullYear() != year) return;
                %>
                    <tr>
                        <td class="icon"> <%
                            switch (event.weather) {
                                case 0:
                                    %><img src="/static/img/ampel_rot.png"><%
                                    break;
                                case 1:
                                    %><img src="/static/img/ampel_gruen.png"><%
                                    break;
                            }
                        %> </td>
                        <td>
                            <a href="event/<%= event.id %>.html"><%= event.title %></a>
                        </td>
                    </tr>
                <%
            });
        %>
    </table>

    <div class="panel-footer">
        Archiv:
        <ul class="list-inline past-years">
            <% for (var i = 2012, curY = new Date().getFullYear(); i <= curY; i++) { %>
                <li><a href="?year=<%= i %>"><%= i %></a></li>
            <% } %>
        </ul>
    </div>
</div>
